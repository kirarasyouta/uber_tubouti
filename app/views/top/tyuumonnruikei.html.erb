<!DOCTYPE html>
<html lang="jp">
<head>
  <meta charset="UTF-8">
  <%= csrf_meta_tags %>
  <title>あなたのアプリ名</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> <!-- Chart.jsを読み込み -->
</head>
<body>
  <header>
    <!-- ヘッダー部分はそのまま -->
  </header>

  <main>
    <h2>注文状況</h2>
    <canvas id="orderChart" width="400" height="200"></canvas> <!-- グラフ表示用のキャンバス -->

    <script>
      // グラフに表示するデータ
      const productNames = ['A弁当', 'B弁当', 'C弁当', 'D弁当', 'E弁当', 'F弁当', 'G弁当']; // 商品名
      const productCounts = [12, 19, 3, 5, 2, 3, 7]; // ここ1ヶ月間の注文個数

      // グラフの設定
      const ctx = document.getElementById('orderChart').getContext('2d');
      const orderChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: productNames, // X軸のラベル
          datasets: [{
            label: '注文個数',
            data: productCounts, // Y軸のデータ
            backgroundColor: [
              'rgba(75, 192, 192, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(255, 206, 86, 0.2)',
              'rgba(153, 102, 255, 0.2)',
              'rgba(255, 159, 64, 0.2)',
              'rgba(201, 203, 207, 0.2)',
              'rgba(255, 99, 132, 0.2)'
            ],
            borderColor: [
              'rgba(75, 192, 192, 1)',
              'rgba(54, 162, 235, 1)',
              'rgba(255, 206, 86, 1)',
              'rgba(153, 102, 255, 1)',
              'rgba(255, 159, 64, 1)',
              'rgba(201, 203, 207, 1)',
              'rgba(255, 99, 132, 1)'
            ],
            borderWidth: 1
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    </script>
  </main>

  <footer>
    <!-- フッター部分はそのまま -->
  </footer>
</body>
</html>
